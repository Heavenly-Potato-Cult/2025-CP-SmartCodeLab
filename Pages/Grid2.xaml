<UserControl x:Class="SmartCodeLab2.Grid2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCodeLab2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Shared Styles -->
        <Style TargetType="Border" x:Key="PanelBorder">
            <Setter Property="Background" Value="#334455"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF0C2D6D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="50"/>
            <!-- Spacer -->
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>

        <!-- File Manager Panel -->
        <Border Grid.Column="0" Style="{StaticResource PanelBorder}">
            <StackPanel>
                <TextBlock Text="Reference Files" Style="{StaticResource HeaderText}"/>

                <ListBox x:Name="FileList" 
                         Height="200" 
                         Background="White"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Add File" 
                            Style="{StaticResource ActionButton}"/>

                    <Button Content="Delete File" 
                            Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Code Preview Panel -->
        <Border Grid.Column="2" Background="#1E1E1E" Padding="10" CornerRadius="5" Margin="0,0,306,0">
            <StackPanel>
                <TextBlock Text="Preview" 
                           Style="{StaticResource HeaderText}"
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
