<UserControl
            xmlns:tree="clr-namespace:SmartCodeLab2.Models.TreeItemObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCodeLab2"
             xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:CustomComponents="clr-namespace:SmartCodeLab2.CustomComponents" x:Class="SmartCodeLab2.Grid3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Shared Styles -->
        <Style TargetType="{x:Type Border}" x:Key="MainPanelBorder">
            <Setter Property="Background" Value="#334455"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="{x:Type TextBox}" x:Key="InputField">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="ActionButton">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF26DA41">
        <hc:ButtonGroup/>
        <TreeView Width="150" Name="fileTree" HorizontalAlignment="Left" Margin="0,32,0,151" SelectedItemChanged="Open_File_Selected">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type tree:FileItem}" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
        <Menu Height="30" VerticalAlignment="Top" Margin="0,0,0,0">
            <MenuItem Header="File">
                <MenuItem Header="New File" Click="FileMenu_Click">
                </MenuItem>
                <MenuItem Header="Open Folder" Click="OpenFolder_Click">
                </MenuItem>
            </MenuItem>
        </Menu>
        <hc:TabControl Margin="155,32,0,0" Name="tabControl">
        </hc:TabControl>
    </Grid>
</UserControl>
