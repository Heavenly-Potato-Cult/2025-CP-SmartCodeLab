<UserControl x:Class="SmartCodeLab2.CustomComponents.CustomSideMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="165">
    <Button x:Name="PART_Button" 
            Background="Transparent" 
            BorderThickness="0" 
            Padding="10,0,0,0"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            VerticalAlignment="Top" Height="48" Width="165">

        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Image Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Width="24" Height="24"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- Text -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="White" FontSize="14"
                       VerticalAlignment="Center" 
                       Margin="5,0,0,0"/>
        </Grid>
    </Button>
</UserControl>
