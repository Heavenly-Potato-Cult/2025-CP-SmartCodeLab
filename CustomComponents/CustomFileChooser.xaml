<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartCodeLab2.CustomComponents"
             xmlns:hc="https://handyorg.github.io/handycontrol" 
             x:Class="SmartCodeLab2.CustomComponents.CustomFileChooser"
             Background="Gainsboro" Width="239" Height="28">
    <Grid Name="grid">
        <Label Name="label" Content="Files" HorizontalAlignment="Left" FontWeight="Bold" VerticalAlignment="Top" Width="155" Height="28"/>
        <hc:ScrollViewer x:Name="container" HorizontalAlignment="Left" Height="Auto" Width="233" MaxHeight="70" Background="RosyBrown" Margin="5,33,0,4">
            <StackPanel x:Name="fileHolder" VerticalAlignment="Top" Height="Auto" Width="Auto" Background="Salmon"/>
        </hc:ScrollViewer>
        <local:CustomButton x:Name="button" HorizontalAlignment="Left" Text="Select File" Margin="160,0,0,0" VerticalAlignment="Top" Height="27" Width="78" Click="CustomButton_Click"/>
    </Grid>
</UserControl>
