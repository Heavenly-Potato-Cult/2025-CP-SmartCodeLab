<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="SmartCodeLab2.MainWindow"
        Height="760" Width="1280"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Border Background="White" MouseDown="Border_MouseDown">
        <DockPanel>

            <!-- Side Menu -->
            <StackPanel Background="#FF1E2021" Width="50" DockPanel.Dock="Left">

                <!-- Toggle Button -->
                <Button Tag="Toggle" Click="MenuButton_Click"
                        Background="#FF1E2021" BorderThickness="0"
                        Padding="0" Width="50" Height="50">
                    <Image Source="/Assets/icons/menu_white.png" Width="24" Height="24"/>
                </Button>

                <!-- Overview -->
                <Button Tag="Overview" Click="StudentsButton_Click"
                        Background="#FF1E2021" BorderThickness="0"
                        Padding="0" Width="50" Height="50">
                    <Image Source="/Assets/icons/group_white.png" Width="24" Height="24"/>
                </Button>

                <!-- Files -->
                <Button Tag="Files" Click="FilesButton_Click"
                        Background="#FF1E2021" BorderThickness="0"
                        Padding="0" Width="50" Height="50">
                    <Image Source="/Assets/icons/file_white.png" Width="24" Height="24"/>
                </Button>

                <!-- Instructions -->
                <Button Tag="Instructions" Click="InstructionsButton_Click"
                        Background="#FF1E2021" BorderThickness="0"
                        Padding="0" Width="50" Height="50">
                    <Image Source="/Assets/icons/instruction_white.png" Width="24" Height="24"/>
                </Button>

                <!-- Exit -->
                <Button Tag="Exit" Click="ExitButton_Click"
                        Background="#FF1E2021" BorderThickness="0"
                        Padding="0" Width="50" Height="50">
                    <Image Source="/Assets/icons/logout_white.png" Width="24" Height="24"/>
                </Button>

            </StackPanel>

            <!-- Main Content Area -->
            <Grid>
                <ContentControl x:Name="cc" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="1220" Height="760"/>
            </Grid>

        </DockPanel>
    </Border>
</Window>
